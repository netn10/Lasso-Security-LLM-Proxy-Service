# Development Environment Configuration
# Copy this to .env and modify for your development environment

# API Configuration
PORT=3000

# OpenAI Configuration
OPENAI_API_URL=https://api.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration
ANTHROPIC_API_URL=https://api.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security Configuration
ENABLE_DATA_SANITIZATION=true
ENABLE_POLICY_ENFORCEMENT=true
FINANCIAL_DETECTION_STRICT=true

# Database Configuration (Development - Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=lasso_user
DB_PASSWORD=lasso_password
DB_DATABASE=lasso_proxy
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=3000

# Environment Configuration
NODE_ENV=development

# Cache Configuration
CACHE_TTL=300
ENABLE_CACHING=true

# Blocking Configuration
ENABLE_TIME_BASED_BLOCKING=true

# SSL Configuration (disabled for local development)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# Optional: Enable database query logging for debugging
ENABLE_DB_LOGGING=false